<div class="modal fade" id="update-modal" tabindex="-1" aria-labelledby="update-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="update-modal-label">Update</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Teacher" asp-action="Update" method="post">
                <input type="hidden" id="txtUpdateId" name="Id">
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input type="text" id="txtUpdateFirstName" class="form-control" name="FirstName" required>
                        <label for="txtUpdateFirstName">First Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" id="txtUpdateLastName" class="form-control" name="LastName" required>
                        <label for="txtUpdateLastName">Last Name</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>