<div class="modal fade" id="post-modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Create teacher</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Teacher" asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input type="text" id="txtFirstName" class="form-control" name="FirstName" required>
                        <label class="form-label" for="txtFirstName">First name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" id="txtLastName" class="form-control" name="LastName" required>
                        <label class="form-label" for="txtLastName">Last name</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btnPost" class="btn btn-primary">Post</button>
                </div>
            </form>
        </div>
    </div>
</div>
